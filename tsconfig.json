{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2015",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/modules/*"],
      "Components/*": ["./src/components/*"],
      "Modules/*": ["./src/modules/*"],
      "Static/*": ["static/*"]
    }
  },
  "exclude": ["node_modules", ".parcel-cache"]
}
