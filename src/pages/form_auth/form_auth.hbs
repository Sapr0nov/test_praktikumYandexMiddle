<form id="auth" name="auth" class="form form-auth">
  <link rel="stylesheet" href="/static/form.css" />
  <h2 class="form-title">{{enter_text}}</h2>
  <span class="form-error"></span>
  <label for="login">
    {{login_text}}
    <input type="text" value="" name="login" placeholder="ivanivanov" />
  </label>
  <label for="pswd">
    {{password_text}}
    <input type="password" name="password" />
  </label>

  <button class="form-btn">{{btn_name}}</button>
  <a class="form-link" href="/sign-up">{{link_text}}</a>
</form>